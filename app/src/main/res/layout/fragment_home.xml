<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/zero_dp"
            android:layout_marginLeft="@dimen/twelve_dp"
            app:layout_constraintBottom_toTopOf="@id/guideline3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/level_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twelve_dp"
                android:gravity="center"
                android:text="Level LG"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/h_medium"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:paddingTop="@dimen/twelve_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/level_name">

                <ScrollView
                    android:id="@+id/sv_parking_slot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/fourty_eight_dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_slot_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_layout_white"
                            android:padding="@dimen/twelve_dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5" />

                            <TextView
                                android:id="@+id/slot_name_tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/slot_name"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/slot_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="LG - 1"
                                android:textColor="@color/darkGrey"
                                android:textSize="@dimen/h2"
                                app:layout_constraintTop_toBottomOf="@id/slot_name_tag" />

                            <TextView
                                android:id="@+id/set_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:gravity="center"
                                android:text="Set slot status"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@id/slot_name" />

                            <ImageButton
                                android:id="@+id/status_road"
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/six_dp"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:background="@drawable/card_layout_purple"
                                android:padding="@dimen/four_dp"
                                android:src="@drawable/ic_road"
                                android:tint="@color/white"
                                app:layout_constraintLeft_toRightOf="@id/guideline4"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/status_car" />

                            <ImageButton
                                android:id="@+id/status_disable"
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:layout_marginRight="@dimen/six_dp"
                                android:background="@drawable/card_layout_purple"
                                android:padding="@dimen/four_dp"
                                android:src="@drawable/ic_disable"
                                android:tint="@color/white"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/guideline4"
                                app:layout_constraintTop_toBottomOf="@id/status_park" />

                            <ImageButton
                                android:id="@+id/status_car"
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/six_dp"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:background="@drawable/card_layout_purple"
                                android:padding="@dimen/four_dp"
                                android:src="@drawable/ic_car"
                                android:tint="@color/white"
                                app:layout_constraintLeft_toRightOf="@id/guideline4"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/set_status" />

                            <ImageButton
                                android:id="@+id/status_park"
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:layout_marginRight="@dimen/six_dp"
                                android:background="@drawable/card_layout_grey_gradient"
                                android:padding="@dimen/four_dp"
                                android:src="@drawable/ic_park"
                                android:tint="@color/white"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/guideline4"
                                app:layout_constraintTop_toBottomOf="@id/set_status" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Button
                            style="@style/NoCaps"
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/twelve_dp"
                            android:layout_marginRight="@dimen/six_dp"
                            android:background="@drawable/card_layout_white"
                            android:fontFamily="sans-serif-light"
                            android:paddingLeft="@dimen/twelve_dp"
                            android:paddingRight="@dimen/twelve_dp"
                            android:text="@string/edit_mode"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/guideline5"
                            app:layout_constraintTop_toBottomOf="@id/layout_slot_detail" />

                        <Button
                            style="@style/NoCaps"
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/six_dp"
                            android:layout_marginTop="@dimen/twelve_dp"
                            android:background="@drawable/card_layout_white"
                            android:fontFamily="sans-serif-light"
                            android:paddingLeft="@dimen/twelve_dp"
                            android:paddingRight="@dimen/twelve_dp"
                            android:text="@string/view_section"
                            android:textColor="@color/colorSecondary"
                            app:layout_constraintHorizontal_bias="0.85"
                            app:layout_constraintLeft_toRightOf="@id/guideline5"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layout_slot_detail" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_layout_parking_layout"
            app:layout_constraintLeft_toRightOf="@id/guideline2"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/custom_scrollview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:paddingStart="@dimen/twelve_dp"
                android:paddingTop="@dimen/twelve_dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:id="@+id/scroll_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <HorizontalScrollView
                            android:id="@+id/layoutPark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </ScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>